{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "..",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "index.ts",
        "../shared/**/*"
    ]
}